<h1>Lista de Articulos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Cuerpo</th>
      <th>Publicar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.public %></td>
        <td><%= link_to "Mostrar",article, class: "boton1" %></td>
        <td><%= link_to 'Editar', edit_article_path(article), class: "boton1"  %></td>
        <td><%= link_to 'Eliminar', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "boton1"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Articulo', new_article_path, class: "boton1" %>
